{
  "extends": "next/core-web-vitals", 
  "rules": {
    "indent": ["error", 2],
    "linebreak-style": ["error", "unix"],
    "quotes": [
      "error",
      "single",
      {
        "allowTemplateLiterals": true
      }
    ],
    "semi": ["error", "never"],
    "object-curly-spacing": ["error", "always"],
    "no-console": ["error", { "allow": ["warn", "error"] }]
  }
}
